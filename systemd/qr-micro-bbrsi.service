[Unit]
Description=QR Micro BB_RSI Worker (single strategy)
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/tossaki/QuantRabbit
Environment="PYTHONUNBUFFERED=1"
ExecStart=/home/tossaki/QuantRabbit/.venv/bin/python -m workers.micro_bbrsi.worker
Restart=always
RestartSec=5
User=tossaki

[Install]
WantedBy=multi-user.target
