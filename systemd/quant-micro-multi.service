[Unit]
Description=QuantRabbit Micro Multi-Strategy Worker
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/tossaki/QuantRabbit
Environment="PYTHONUNBUFFERED=1"
Environment="MICRO_STRATEGY_ALLOWLIST=MicroPullbackEMA,MicroVWAPRevert,MicroRangeBreak,MicroCompressionRevert,MomentumPulse"
ExecStart=/home/tossaki/QuantRabbit/.venv/bin/python -m workers.micro_multistrat.worker
Restart=always
RestartSec=5
User=tossaki

[Install]
WantedBy=multi-user.target
