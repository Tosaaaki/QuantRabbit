[Unit]
Description=QuantRabbit Volatility Spike Rider Worker
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/tossaki/QuantRabbit
Environment="PYTHONUNBUFFERED=1"
ExecStart=/home/tossaki/QuantRabbit/.venv/bin/python -m workers.vol_spike_rider.worker
Restart=always
RestartSec=5
