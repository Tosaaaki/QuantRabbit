[Unit]
Description=QuantRabbit UI snapshot publisher
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=tossaki
WorkingDirectory=/home/tossaki/QuantRabbit
Environment="PYTHONUNBUFFERED=1"
Environment="PYTHONPATH=/home/tossaki/QuantRabbit"
Environment="UI_SNAPSHOT_ARGS=--lite"
Environment="UI_SNAPSHOT_LITE_MODE=full"
EnvironmentFile=/home/tossaki/QuantRabbit/ops/env/quant-v2-runtime.env
ExecStart=/bin/bash /home/tossaki/QuantRabbit/scripts/run_ui_snapshot.sh
