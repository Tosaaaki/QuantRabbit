[Unit]
Description=QuantRabbit Scalp Squeeze Pulse Break Exit Worker
After=network.target

[Service]
EnvironmentFile=-/home/tossaki/QuantRabbit/ops/env/quant-v2-runtime.env
EnvironmentFile=-/home/tossaki/QuantRabbit/ops/env/quant-scalp-squeeze-pulse-break-exit.env
