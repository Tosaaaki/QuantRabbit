[Unit]
Description=QuantRabbit health snapshot publisher
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=tossaki
WorkingDirectory=/home/tossaki/QuantRabbit
Environment="PYTHONUNBUFFERED=1"
Environment="PYTHONPATH=/home/tossaki/QuantRabbit"
EnvironmentFile=/etc/quantrabbit.env
ExecStart=/home/tossaki/QuantRabbit/.venv/bin/python -u scripts/publish_health_snapshot.py
