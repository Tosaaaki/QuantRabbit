[Unit]
Description=QuantRabbit health snapshot publisher
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=tossaki
WorkingDirectory=/home/tossaki/QuantRabbit
Environment="PYTHONUNBUFFERED=1"
Environment="PYTHONPATH=/home/tossaki/QuantRabbit"
EnvironmentFile=/home/tossaki/QuantRabbit/ops/env/quant-v2-runtime.env
ExecStart=/bin/bash /home/tossaki/QuantRabbit/scripts/run_health_snapshot.sh
