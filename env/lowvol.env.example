# --- Low-Vol Feature Flags & Params ---
LOWVOL_ENABLE=true
HAZARD_EXIT_ENABLE=true

# Canary rollout (comma-separated symbols; optional hours ranges)
LOWVOL_CANAIRY_SYMBOLS=USD_JPY,EUR_USD
LOWVOL_CANAIRY_HOURS=07:00-10:00,14:00-17:00

# Exit control (balanced preset; low-vol & quiet)
EVENT_BUDGET_TICKS=16
GRACE_MS=200
HAZARD_DEBOUNCE_TICKS=1
UPPER_BOUND_MIN_SEC=1.6
UPPER_BOUND_MAX_SEC=3.2

# Hazard cost (early cut when spread/latency are bad)
HAZARD_COST_SPREAD_BASE=0.22
HAZARD_COST_LATENCY_BASE_MS=220

# Soft TP before timeout (balanced)
SOFT_TP_PIPS=0.30
TIMEOUT_SOFT_TP_FRAC=0.70

# Strategy gates (balanced; tighten slightly in canary)
LOWVOL_VOL5M_NORM_MAX=0.80
LOWVOL_TICK_RATE_MIN=9
MOMENTUMPULSE_CONF_MIN=0.65
MICROVWAP_Z_MIN=2.2
MICROVWAP_VOL5M_NORM_MAX=0.75
