# QuantRabbit guarded core backup defaults.
# Keep this job "low-impact first"; skip quickly when the VM is under pressure.

QR_CORE_BACKUP_ENABLED=1
QR_CORE_BACKUP_MAX_LOAD1=8.0
QR_CORE_BACKUP_MAX_DSTATE=12
QR_CORE_BACKUP_MIN_MEM_AVAILABLE_MB=1024
QR_CORE_BACKUP_MAX_SWAP_USED_MB=1536

QR_CORE_BACKUP_BUSY_TIMEOUT_MS=250
QR_CORE_BACKUP_SNAPSHOT_TIMEOUT_SEC=20
QR_CORE_BACKUP_UPLOAD_TIMEOUT_SEC=90
QR_CORE_BACKUP_MAX_DB_MB=1024
QR_CORE_BACKUP_MAX_FILE_MB=256

# Hot DBs are disabled by default to avoid trading-path contention.
QR_CORE_BACKUP_INCLUDE_ORDERS_DB=0
QR_CORE_BACKUP_INCLUDE_METRICS_DB=0

# Low-cost forensic set.
QR_CORE_BACKUP_INCLUDE_TRADES_DB=1
QR_CORE_BACKUP_INCLUDE_SIGNALS_DB=1
QR_CORE_BACKUP_INCLUDE_ORDERS_SNAPSHOT_DB=1
QR_CORE_BACKUP_INCLUDE_TRADES_SNAPSHOT_DB=1
QR_CORE_BACKUP_INCLUDE_PIPELINE_LOG=1
QR_CORE_BACKUP_INCLUDE_HEALTH_JSON=1
