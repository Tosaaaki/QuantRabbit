ORDER_MANAGER_SERVICE_ENABLED=0
ORDER_MANAGER_SERVICE_FALLBACK_LOCAL=1

# scalp_ping_5s_b: entry_probability の過信で高ロット逆行が出る局面を抑えるため、
# 確率スケールは「reject=0.42 / min_scale=0.75 / max_scale=1.00」にフラット化する。
ORDER_MANAGER_PRESERVE_INTENT_REJECT_UNDER_STRATEGY_SCALP_PING_5S_B_LIVE=0.42
ORDER_MANAGER_PRESERVE_INTENT_MIN_SCALE_STRATEGY_SCALP_PING_5S_B_LIVE=0.75
ORDER_MANAGER_PRESERVE_INTENT_MAX_SCALE_STRATEGY_SCALP_PING_5S_B_LIVE=1.00
ORDER_DB_BUSY_TIMEOUT_MS=1500
ORDER_DB_LOG_RETRY_ATTEMPTS=3
ORDER_DB_LOG_RETRY_SLEEP_SEC=0.03
ORDER_DB_LOG_RETRY_BACKOFF=2.0
ORDER_DB_LOG_RETRY_MAX_SLEEP_SEC=0.20
ORDER_ALLOW_STOP_LOSS_ON_FILL_SCALP_PING_5S_B=1
ORDER_DISABLE_ENTRY_HARD_STOP_SCALP_PING_5S_B=0
# Keep scalp_ping_5s_b entry frequency while still logging degraded performance.
SCALP_PING_5S_B_PERF_GUARD_MODE=warn

# scalp_ping_5s_flow は margin closeout の緊急ブロックを維持しつつ、
# 古い closeout（>1日）で長時間止まり続けないよう参照窓だけ短縮する。
SCALP_PING_5S_FLOW_PERF_GUARD_LOOKBACK_DAYS=1
